@model ML.Libro
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LIBROS</h2>

@using (Html.BeginForm("Form", "Alumno", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="table table-striped table-hover">
        <tr >
            <td>Editar</td>
            <td>IdLibro</td>
            <td>Nombre</td>
            <td>FechaPublicacion</td>
            <td>NumeroPaginas</td>
            <td>IdAutor</td>
            <td>Eliminar</td>
        </tr>

        @foreach (ML.Libro libro in Model.Libros)
        {
            <tr>
                <td>Editar</td>
                <td>@libro.IdLibro</td>
                <td>@libro.Nombre</td>
                <td>@libro.FechaPublicacion</td>
                <td>@libro.NumeroPaginas</td>
                <td>@libro.Autor.IdAutor</td>
                <td><a class=""></td>
                <td style=""><a class="glyphicon glyphicon-remove" href="@Url.Action("Delete", "Libro", new { IdLibro = libro.IdLibro})"></a></td>
            </tr>
        }
    </table>
}

